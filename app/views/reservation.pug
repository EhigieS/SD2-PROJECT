extends layout 
block content 
    #fh5co-contact(data-section="reservation")
        .container
            .row.text-center.fh5co-heading.row-padded
            .col-md-8.col-md-offset-2
                h2.heading.to-animate Booking
                p.sub-heading.to-animate Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.
            
            .col-md-6.to-animate-2
                h3 Table Reservation
                form(action="/book-table", method="post") 
                    .form-group
                    label(for="cust_name" class="sr-only") Name
                    input#name.form-control(placeholder="Name", type="text")
                    .form-group
                    label(for="email" class="sr-only") Email
                    input#email.form-control(placeholder="Email", type="email")
                    .form-group
                    label(for="occasion" class="sr-only") Occasion
                    select.form-control#occation
                        option Select an Occasion
                        option Couples
                        option Family
                        option Custom
                    .form-group
                    label(for="date" class="sr-only") Date
                    input#date.form-control(placeholder="Date & Time", type="date")
                    .form-group
                    label(for="message" class="sr-only") Message
                    textarea#message.form-control(placeholder="Message", cols="30", rows="5")
                    .form-group
                    input.btn.btn-primary(value="Send Message", type="submit")
            .col-md-6.to-animate-2
                h3 Room Reservation
                form(action="/book-room", method="post") 
                    .form-group
                    label(for="name" class="sr-only") Name
                    input#name.form-control(placeholder="Name", type="text")
                    .form-group
                    label(for="email" class="sr-only") Email
                    input#email.form-control(placeholder="Email", type="email")
                    .form-group
                    label(for="room" class="sr-only") Room
                    select.form-control#room
                        option Select a Room
                        option Single Bed
                        option Double Bed
                        option Suite
                    .form-group
                    label(for="date" class="sr-only") Date
                    input#date.form-control(placeholder="Date & Time", type="date")
                    .form-group
                    label(for="message" class="sr-only") Message
                    textarea#message.form-control(placeholder="Message", cols="30", rows="5")
                    .form-group
                    input.btn.btn-primary(value="Send Message", type="submit")