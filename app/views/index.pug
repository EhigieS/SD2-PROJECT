extends layout
block content
    #fh5co-container
    #fh5co-home.js-fullheight(data-section='home')
        .flexslider
        .fh5co-overlay
        .fh5co-text
            .container
            .row
                h1.to-animate
                img(src='bluemistlogo.png')
        ul.slides
            li(style='background-image: url(images/slide_1.jpg);' data-stellar-background-ratio='0.5')
            li(style='background-image: url(images/slide_2.jpg);' data-stellar-background-ratio='0.5')
            li(style='background-image: url(images/slide_3.jpg);' data-stellar-background-ratio='0.5')
    .js-sticky
        .fh5co-main-nav
        .container-fluid
            .fh5co-menu-1
            a(href='#' data-nav-section='home') Home
            a(href='#' data-nav-section='about') About
            a(href='#' data-nav-section='menu') Menu
            .fh5co-logo
            a(href='#') Blue Mist
            .fh5co-menu-2
            a(href='#' data-nav-section='events') Events
            a(href='#' data-nav-section='reservation') Reservation
